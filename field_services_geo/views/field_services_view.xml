<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_form_geo_checkin" model="ir.ui.view">
        <field name="name">project.task.form.geo.checkin</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Insertamos pestaña Geolocalización -->
            <xpath expr="//notebook" position="inside">
                <page name="geolocation" string="Geolocalización">
                    <group>
                        <field name="checkin_latitude" readonly="1"/>
                        <field name="checkin_longitude" readonly="1"/>
                        <field name="checkin_datetime" readonly="1"/>
                        <field name="checkin_distance_km" readonly="1"/>
                        
                        <!-- Botón optimizado para captura automática -->
                        <button name="action_geo_checkin"
                                string="📍 Capturar Ubicación Automáticamente"
                                type="button"
                                title="Captura automática de coordenadas GPS y registra check-in"
                                class="btn btn-success o_geo_checkin_button oe_highlight"
                                icon="fa-location-arrow"
                                invisible="not id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>