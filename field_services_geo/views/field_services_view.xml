<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_form_geo_checkin" model="ir.ui.view">
        <field name="name">project.task.form.geo.checkin</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- Insertamos pestaña Geolocalización -->
            <xpath expr="//notebook" position="inside">
                <page name="geolocation" string="Geolocalización">
                    <group>
                        <field name="checkin_latitude"/>
                        <field name="checkin_longitude"/>
                        <field name="checkin_datetime"/>
                        <field name="checkin_distance_km"/>
                        <button name="action_geo_checkin"
                            type="object"
                            string="Registrar Check-In"
                            class="btn btn-primary o_geo_checkin_button"
                            title="Registrar"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>