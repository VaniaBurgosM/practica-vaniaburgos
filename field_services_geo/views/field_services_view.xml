<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_task_form_geo_checkin" model="ir.ui.view">
            <field name="name">project.task.form.geo.checkin</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="geolocation" string="Geolocalización">
                        <group>
                            <group>
                                <field name="checkin_latitude" readonly="1"/>
                                <field name="checkin_longitude" readonly="1"/>
                            </group>
                            <group>
                                <field name="checkin_datetime" readonly="1"/>
                                <field name="checkin_distance_km" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Widget personalizado para el botón -->
                        <div class="mt-3">
                            <field name="id" widget="geo_checkin_widget" nolabel="1"/>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>0